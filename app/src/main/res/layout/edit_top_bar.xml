<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_back"/>
    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_check_black_24dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_backward"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_forward"
        android:tint="@color/default_gray"
        android:src="@drawable/ic_backward"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_forward"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_save"
        android:tint="@color/default_gray"
        android:src="@drawable/ic_forward"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_set"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_set"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_theme"
        android:src="@drawable/ic_share"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_theme"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_set"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_theme"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>